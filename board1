                        <?php
                        $servername = "localhost";
                        $username = "root";
                        $password = "";
                        $dbname = "mydb";

                        // Create connection
                        $conn = new mysqli($servername, $username, $password, $dbname);
                        // Check connection
                        if ($conn->connect_error) {
                            die("Connection failed: " . $conn->connect_error);
                        } 

                        $sql = "SELECT Name,Date, Venue, Mobile,Score,Overs,Leg,Half,Four,Six FROM board1 where Venue='DHI Ionnovation' ORDER BY Score DESC";
                        $result = $conn->query($sql);

                        if ($result->num_rows > 0) {
                            // output data of each row
                            echo "<table border='1'><tr><th>Date</th><th>Name</th><th>Venue</th><th>Mobile</th><th>Score</th><th>Overs</th><th>Leg-Side</th><th>Off-Side</th>
                            <th>4'S</th><th>6'S</th><th>Others</th></tr>";
                             
                            while($row = $result->fetch_assoc()) {


                          echo " <tr><td>".$row['Date']."</td><td>". $row["Name"]."</td><td>".$row["Venue"]."</td><td>" . $row["Mobile"] ."</td><td>  " . $row["Score"] ."</td><td>".  $row["Overs"] ."</td><td>". $row["Leg"] ."</td><td>". $row["Half"]."</td><td>".$row["Four"] ."</td><td>".$row["Six"] ."</td><td> <a href='circlebar.html' target='_blank' style='color:red' id='more' onclick='document.getElementById('this.value').value'>More</a></td></tr>";




                            }
                           
                        } else {
                            echo "</table>";
                        }

                        $conn->close();
                        ?> 
               
          
